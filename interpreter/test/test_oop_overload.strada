package Point;
has rw int $x = 0;
has rw int $y = 0;

func add(scalar $self, scalar $other, int $reversed) scalar {
    return Point::new("x", $self->x() + $other->x(), "y", $self->y() + $other->y());
}

func to_str(scalar $self) str {
    return "(" . $self->x() . "," . $self->y() . ")";
}

use overload "+" => "add", '""' => "to_str";

package main;
func main() int {
    my scalar $p1 = Point::new("x", 1, "y", 2);
    my scalar $p2 = Point::new("x", 3, "y", 4);
    my scalar $p3 = $p1 + $p2;
    say($p1);
    say($p2);
    say($p3);
    return 0;
}
