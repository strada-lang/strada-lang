func main() int {
    # Array operations
    my array @a = (10, 20, 30, 40, 50);
    say(size(@a));
    push(@a, 60);
    say(size(@a));
    my int $v = pop(@a);
    say($v);

    # Array slice
    my array @slice = @a[1, 3];
    say(join(",", \@slice));

    # Hash operations
    my hash %h = ("name" => "Alice", "age" => 30);
    say($h{"name"});
    say(exists(\%h, "age"));
    delete(\%h, "age");
    say(exists(\%h, "age"));

    # Hash slice
    my hash %data = ("a" => 1, "b" => 2, "c" => 3);
    my array @vals = @data{"a", "c"};
    say(join(",", \@vals));

    # References
    my int $x = 42;
    my scalar $ref = \$x;
    say($$ref);

    # Anonymous array/hash refs
    my scalar $ar = [1, 2, 3];
    say($ar->[1]);
    my scalar $hr = {"key" => "val"};
    say($hr->{"key"});

    return 0;
}
