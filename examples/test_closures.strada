func test_basic_add() int {
    my scalar $add = func (int $a, int $b) { return $a + $b; };
    my int $r = $add->(3, 4);
    if ($r != 7) {
        say("FAIL: basic add expected 7, got " . $r);
        return 1;
    }
    return 0;
}

func test_no_params() int {
    my scalar $get_pi = func () { return 3; };
    my int $r = $get_pi->();
    if ($r != 3) {
        say("FAIL: no params expected 3, got " . $r);
        return 1;
    }
    return 0;
}

func test_one_param() int {
    my scalar $dbl = func (int $x) { return $x * 2; };
    my int $r = $dbl->(5);
    if ($r != 10) {
        say("FAIL: one param expected 10, got " . $r);
        return 1;
    }
    return 0;
}

func test_three_params() int {
    my scalar $sum3 = func (int $a, int $b, int $c) { return $a + $b + $c; };
    my int $r = $sum3->(1, 2, 3);
    if ($r != 6) {
        say("FAIL: three params expected 6, got " . $r);
        return 1;
    }
    return 0;
}

func apply(scalar $f, int $x) int {
    return $f->($x);
}

func test_higher_order() int {
    my scalar $triple = func (int $n) { return $n * 3; };
    my int $r = apply($triple, 4);
    if ($r != 12) {
        say("FAIL: higher order expected 12, got " . $r);
        return 1;
    }
    return 0;
}

func test_return_string() int {
    my scalar $greet = func (str $name) { return "Hello, " . $name; };
    my str $r = $greet->("World");
    if ($r ne "Hello, World") {
        say("FAIL: return string expected 'Hello, World', got '" . $r . "'");
        return 1;
    }
    return 0;
}

func test_capture_single() int {
    my int $multiplier = 10;
    my scalar $scale = func (int $n) { return $n * $multiplier; };
    my int $r = $scale->(5);
    if ($r != 50) {
        say("FAIL: capture single expected 50, got " . $r);
        return 1;
    }
    return 0;
}

func test_capture_multiple() int {
    my int $a = 2;
    my int $b = 3;
    my int $c = 5;
    my scalar $f = func (int $x) { return $x * $a + $b * $c; };
    my int $r = $f->(10);
    # 10 * 2 + 3 * 5 = 20 + 15 = 35
    if ($r != 35) {
        say("FAIL: capture multiple expected 35, got " . $r);
        return 1;
    }
    return 0;
}

func test_capture_mutation() int {
    my int $count = 0;
    my scalar $inc = func () {
        $count = $count + 1;
        return $count;
    };
    my int $r1 = $inc->();
    my int $r2 = $inc->();
    my int $r3 = $inc->();
    if ($r1 != 1 || $r2 != 2 || $r3 != 3) {
        say("FAIL: capture mutation expected 1,2,3, got " . $r1 . "," . $r2 . "," . $r3);
        return 1;
    }
    # Also check the outer variable was updated
    if ($count != 3) {
        say("FAIL: outer variable should be 3, got " . $count);
        return 1;
    }
    return 0;
}

func main() int {
    my int $failed = 0;

    $failed = $failed + test_basic_add();
    $failed = $failed + test_no_params();
    $failed = $failed + test_one_param();
    $failed = $failed + test_three_params();
    $failed = $failed + test_higher_order();
    $failed = $failed + test_return_string();
    $failed = $failed + test_capture_single();
    $failed = $failed + test_capture_multiple();
    $failed = $failed + test_capture_mutation();

    if ($failed == 0) {
        say("All closure tests passed!");
    } else {
        say("FAILED: " . $failed . " test(s)");
    }
    return $failed;
}
